<openerp>
    <data>
        <record model="ir.ui.view" id="borrow_view_tree">
            <field name="name">borrow tree view</field>
            <field name="model">stock_office_supplies.borrow_order</field>
            <field name="arch" type="xml">
                <tree string="Office supplies borrows" default_order="name desc">
                    <field name="name"/>
                    <field name="user"/>
                    <field name="date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="borrow_view_form">
            <field name="name">borrow form view</field>
            <field name="model">stock_office_supplies.borrow_order</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="send" type="workflow"
                            string="Send"
                            states="draft" class="oe_highlight"/>
                        <button name="approve" type="workflow"
                            string="First Approve"
                            states="sent" class="oe_highlight"/>
                        <button name="second_approve" type="workflow"
                            string="Second Approve"
                            states="first_approved" class="oe_highlight"/>
                        <button name="refuse" type="workflow"
                            string="Refuse"
                            states="sent" class="oe_highlight"/>
                        <button name="cancel" type="workflow"
                            string="Cancel"
                            states="draft" class="oe_highlight"/>
                        <field name="state" widget="statusbar"
                            statusbar_visible="draft,sent,first_approved,approved,transferd,refused,cancelled"
                            statusbar_colors="{'draft':'red','sent':'green','first_approved':'blue','approved':'blue','transferd':'blue','refused':'blue','cancelled':'blue'}"/>
                    </header>
                    <sheet>
                        <h1>
                            <!--<label string="Borrow Order" />-->
                            <field name="name"/>
                        </h1>
                        <group>
                            <group>
                                <field name="date"/>
                                <field name="user"/>
                            </group>
                            <group>
                                <field name="picking_id"/>
                                <field name="amount"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Order Lines">
                                <field name="lines">
                                    <tree>
                                        <field name="product_id"/>
                                        <field name="quantity"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="product_template_search_view">
            <field name="name">product.template.search</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_search_view"/>
            <field name="arch" type="xml">
                <xpath expr="/search">
                    <filter name="filter_borrowable" string="Can be Borrowed" domain="[('borrow_ok','=',True)]"/>
                </xpath>
            </field>
        </record>

        <record model="ir.actions.act_window" id="borrow_order_list_action">
            <field name="name">Borrow orders</field>
            <field name="res_model">stock_office_supplies.borrow_order</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="product_list_action">
            <field name="name">Products</field>
            <field name="res_model">product.template</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{"search_default_filter_borrowable":1}</field>
        </record>

        <menuitem id="office_supplies" name="Office Supplies"
                  groups="stock_office_supplies.group_office_supplies_user"/>

        <menuitem id="office_supplies_orders" name="Office Supplies"
                  parent="stock_office_supplies.office_supplies"
                  groups="stock_office_supplies.group_office_supplies_user"/>

        <menuitem id="office_supplies_products" name="Products"
                  parent="stock_office_supplies.office_supplies"
                  groups="stock_office_supplies.group_office_supplies_user"/>

        <menuitem id="borrow_order_list_menu" name="Borrow orders"
                  parent="stock_office_supplies.office_supplies_orders"
                  action="borrow_order_list_action"
                  groups="stock_office_supplies.group_office_supplies_user"/>

        <menuitem id="product_list_menu" name="Products"
                  parent="stock_office_supplies.office_supplies_products"
                  action="product_list_action"
                  groups="stock_office_supplies.group_office_supplies_user"/>

        <record  model='ir.ui.view' id = "product_template_form_view" >
            <field name = 'name'>product.template.form.view</field>
            <field name = 'model'>product.template</field>
            <field name="type">form</field>
            <field name ='inherit_id' ref='product.product_template_form_view'/>
            <field name ='arch'  type = 'xml'>
                <xpath expr="/form/sheet/div[position()=2]" position ='inside'>
                    <div class="oe_left" name="options" groups="base.group_user">
                        <div>
                            <field name ='borrow_ok'/>
                            <label for="borrow_ok"/>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</openerp>